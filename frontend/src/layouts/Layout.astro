---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="LeetCode Helper - AI-powered coding solutions">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-background-dark">
		<header class="bg-secondary text-white p-4 shadow-md">
			<div class="container mx-auto">
				<div class="flex items-center">
					<div class="text-primary font-bold text-3xl mr-2">{"{}"}</div>
					<div>
						<h1 class="text-2xl font-bold">LeetCode Helper</h1>
						<p class="text-sm text-primary">AI-powered coding solutions</p>
					</div>
				</div>
			</div>
		</header>
		<main class="container mx-auto p-4 md:p-6">
			<slot />
		</main>
		<footer class="bg-secondary text-white p-4 mt-8">
			<div class="container mx-auto text-center">
				<p>&copy; {new Date().getFullYear()} LeetCode Helper. All rights reserved.</p>
				<p class="text-primary text-sm mt-1">Powered by multiple AI providers</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	@import '../styles/global.css';
	
	:root {
		--accent: 255, 215, 0;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #fff 60%);
	}
	html {
		font-family: system-ui, sans-serif;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
		background-color: #333;
		color: #FFD700;
		padding: 0.2em 0.4em;
		border-radius: 3px;
	}
</style>
